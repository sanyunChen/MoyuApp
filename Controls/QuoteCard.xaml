<UserControl x:Class="MoyuApp.Controls.QuoteCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    
    <materialDesign:Card Padding="20" Margin="8" 
                        UniformCornerRadius="14">
        <StackPanel>
            <TextBlock Text="摸鱼语录" FontSize="18" FontWeight="Bold" 
                      Margin="0,0,0,12" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
            <TextBlock x:Name="QuoteTextBlock" FontSize="16" FontStyle="Italic"
                      TextAlignment="Center" Margin="0,20,0,10"
                      Opacity="0.9" TextWrapping="Wrap"
                      MouseLeftButtonDown="QuoteText_MouseLeftButtonDown"
                      Cursor="Hand">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#10FF4081"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
        </StackPanel>
    </materialDesign:Card>
</UserControl>